<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.legagneur_matthieu.convertisseur_temperatures" version="1.0.0">
    <name>Convertisseur de temperatures</name>
    <description>
        Convertisseur de températures en Kelvin (°K), Celsius (°C), Fahrenheit (°F), Benamran (°B, humoristique)
    </description>
    <author email="legagneur.matthieu@gmail.com" href="http://dwf.sytes.net/">
        LEGAGNEUR Matthieu
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
	<icon src="www/logo.png" />
    </platform>
    <preference name="orientation" value="landscape"/>    
</widget>
